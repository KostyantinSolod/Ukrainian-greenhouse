<Window x:Class="Ukrainian_greenhouse.Views.WateringControlEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ukrainian_greenhouse"
        xmlns:vm="clr-namespace:Ukrainian_greenhouse.ViewModels"
        mc:Ignorable="d"
        Title="WateringControlEditor" Height="450" Width="800">
    <Window.DataContext>
        <vm:WateringControlEditorModel/>
    </Window.DataContext>
    <Grid>
        <Button x:Name="Save" Content="Save" Command="{Binding SaveCommand}" Margin="320,320,273,26"/>

        <TextBox x:Name="addWater" Text="{Binding IrrigationVolume}" Margin="309,126,262,263" />

    </Grid>
</Window>
